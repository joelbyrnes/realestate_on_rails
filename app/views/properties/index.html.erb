<h1>Listing properties</h1>

<table class="properties">
  <tr>
    <th>Photo</th>
    <th>Title</th>
    <th>Price</th>
    <th>Address</th>
    <th>Seen date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @properties.each do |property| %>
  <tr>
    <td>
      <a href='<%= property.url %>'>
        <img src='<%= property.photo_url %>'>
      </a>
    </td>
    <td>
      <a href='<%= property.url %>'>
        <span class="site_id"><%= property.site_id %></span><br/>
		<span class="title"><%= property.title %></span><br/>
      </a>
    </td>
    <td><%= property.price_string %></td>
    <td><%= property.address %></td>
    <td><%= property.seen_date %></td>
    <td><%= link_to 'Show', property %></td>
    <td><%= link_to 'Edit', edit_property_path(property) %></td>
    <td><%= link_to 'Destroy', property, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

